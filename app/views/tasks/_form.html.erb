
<%= simple_form_for(@task) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <% if @task.persisted? %>
    <%= f.input :completed %>
    <%= f.submit "Update task", class: "btn btn-primary" %>
  <% else %>
    <%= f.submit "Add task", class: "btn btn-primary" %>
  <% end %>

<% end %>
