<div class="row mt-5">
  <h1>All tasks</h1>
</div>

<div class="row">
  <% @tasks.each do |task| %>
    <div class="card col-6">
      <div class="card-body">
      <%= link_to task_path(task) do %>
       <h5 class="card-title"><%= task.title %></h5>
       <div class="card-subtitle">
        <%= task.completed ? '<span class="badge badge-pill badge-success">Done</span>'.html_safe : '<span class="badge badge-pill badge-danger">To Do</span>'.html_safe %>
      </div>
      <% end %>
      <div class="card-text"><%= task.description %></div>
      <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
  <% if @tasks.empty? %>
    <div class="alert alert-warning w-100">No tasks found!</div>
  <% end %>
</div>

<div class="row mt-3">
  <%= link_to "Add new task", new_task_path, class: "btn btn-success" %>
</div>


